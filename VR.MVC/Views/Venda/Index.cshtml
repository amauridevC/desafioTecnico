@model IEnumerable<VR.MVC.ViewModels.VendaListaViewModel>
@using VR.MVC.ViewModels.Utils
@{
    ViewBag.Title = "Vendas Realizadas";
}

<h2 class="page-header">
    <i class="glyphicon glyphicon-usd"></i> Vendas Realizadas
</h2>

<div class="d-flex justify-content-between mb-4">
    @Html.ActionLink("Nova Venda", "Create", null, new { @class = "btn btn-success btn-lg" })

    @if (Request.IsAuthenticated && User.IsInRole("Administrador") || User.IsInRole("Gerente"))
    {
        @Html.ActionLink("Relatório", "RelatorioMensal", null, new { @class = "btn btn-success btn-lg" })
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <h4>Nenhuma venda cadastrada ainda.</h4>
        <p>Comece agora clicando no botão <strong>Nova Venda</strong> acima!</p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="bg-primary text-white">
                <tr>
                    <th>Protocolo</th>
                    <th>Data venda</th>
                    <th>Cliente</th>
                    <th>CPF</th>
                    <th>Telefone</th>
                    <th>Veículo</th>
                    <th>Fabricante</th>
                    <th class="text-right">Valor</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width: 245px;">
                            <span class="label label-primary label-lg">@item.Protocolo</span>
                        </td>
                        <td>
                            <strong>@item.DataVenda.ToString("dd/MM/yyyy")</strong>
                            <br />
                        </td>
                        <td>
                            <small>
                                @item.NomeCliente
                            </small>

                        </td>

                        <td style="width: 150px;">
                            @item.CpfCliente.FormatarCpf()
                        </td>

                        <td style="width: 150px; ">
                           @item.TelefoneCliente.FormatarTelefone()
                        </td>
                        <td>
                            <strong>@item.ModeloVeiculo</strong>
                        </td>
                        <td>
                            <span class="label label-info">@item.NomeFabricante</span>
                        </td>
                        <td class="text-right text-success">
                            <h5><strong>@item.PrecoVenda.ToString("C")</strong></h5>
                        </td>
                        <td class="text-center">
                            @Html.ActionLink("Detalhes", "Details", new { id = item.Id },
                                new { @class = "btn btn-info btn-xs" })

                            @if (Request.IsAuthenticated && User.IsInRole("Administrador"))
                            {
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                                @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    if (Request.IsAuthenticated && User.IsInRole("Administrador") || User.IsInRole("Gerente"))
    {
        <div class="panel panel-success">
            <div class="panel-body text-center">
                <h4>
                    <strong>@Model.Count()</strong> venda(s) registrada(s) |
                </h4>
            </div>
        </div>
    }
}

<style>
    .label-lg {
        font-size: 100%;
        padding: .4em .6em;
    }

    .bg-primary {
        background-color: #337ab7 !important;
    }
</style>