@model IEnumerable<VR.MVC.ViewModels.ClienteViewModel>
@using VR.MVC.ViewModels.Utils

@{
    ViewBag.Title = "Index";
}

<h2>Clientes cadastrados</h2>

<p>
    @Html.ActionLink("Cadastrar novo cliente", "Create", null, new { @class = "btn btn-success btn-lg" })
</p>
<table class="table table-striped table-hover">
    <thead class="bg-primary text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
     
                    Ações
         
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @item.Cpf.FormatarCpf()
            </td>
            <td>
                @item.Telefone.FormatarTelefone()
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
