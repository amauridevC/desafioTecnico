@model IEnumerable<VR.MVC.ViewModels.FabricanteVeiculoViewModel>
@using VR.MVC.ViewModels.Utils
@{
    ViewBag.Title = "Lista de Fabricantes";
}

<h2>Fabricantes cadastraddos</h2>

<p>
    @Html.ActionLink("Novo Fabricante", "Create", null, new { @class = "btn btn-success btn-lg" })
</p>

<table class="table table-striped table-hover">
    <thead class="bg-primary text-white">
        <tr>
            <th>@Html.DisplayNameFor(m => m.Nome)</th>
            <th>@Html.DisplayNameFor(m => m.Pais)</th>
            <th>Endereço</th>
            <th>@Html.DisplayNameFor(m => m.Telefone)</th>
            <th>@Html.DisplayNameFor(m => m.Email)</th>
            <th>@Html.DisplayNameFor(m => m.AnoFundacao)</th>
            <th>@Html.DisplayNameFor(m => m.Website)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><strong>@Html.DisplayFor(m => item.Nome)</strong></td>
                <td>@Html.DisplayFor(m => item.Pais)</td>
                <td>
                    @if (item.Endereco != null)
                    {
                        <small>
                            @item.Endereco.Rua<br />
                            @item.Endereco.Cidade - @item.Endereco.Estado<br />
                            CEP: @item.Endereco.Cep
                        </small>
                    }
                    else
                    {
                        <em class="text-muted">Sem endereço</em>
                    }
                </td>
                <td>@item.Telefone.FormatarTelefone()</td>
                <td>@Html.DisplayFor(m => item.Email)</td>
                <td>@Html.DisplayFor(m => item.AnoFundacao, "{0:yyyy}")</td>
                <td><a href="@item.Website" target="_blank">Site</a></td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-xs" })
                    @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                </td>
            </tr>
        }
    </tbody>
</table>