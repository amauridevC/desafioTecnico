@using VR.MVC.Models
@model LoginViewModel


<main aria-labelledby="title">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6 col-lg-5">
            <section id="loginForm" class="mt-5">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="text-center">
                        <h4>Seja bem vindo de volta!</h4>
                    </div>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="mb-3">
                        <label class="mb-2">E-mail</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        <label class="mb-2">Senha</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3 form-check">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                        <label>Lembrar do meu login ?</label>
                    </div>

                    <div class="text-center mb-3">
                        <input type="submit" value="Log in" class="btn btn-primary" />
                    </div>

                    if (Request.IsAuthenticated && User.IsInRole("Administrador"))
                    {
                        <p class="text-center">
                            @Html.ActionLink("Registrar novo usuário", "Register")
                        </p>
                    }

     
                }
            </section>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}